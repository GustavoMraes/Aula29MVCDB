@{
    ViewData["Title"] = "Atualizar um computador";
}

<div class="text">
    <h1>Atualizar as informações de um computador:</h1>
    <hr>
</div>


<form action="../UpdateResult" method="post">
    <table>
        <tr>
            <td>Informe o PedidoId:</td>
            <td><input type="text" name="pedidoId" id="id" class="form-control" required></td>
        </tr>

        <tr>
            <td>EmpregadoId:</td>
            <td><input type="text" name="empregadoId" id="empregadoId" class="form-control" required></td>
        </tr>

        <tr>
            <td>Data do Pedido:</td>
            <td><input type="text" name="dataPedido" id="dataPedido" class="form-control" required></td>
        </tr>

        <tr>
            <td>Peso:</td>
            <td><input type="text" name="peso" id="peso" class="form-control" required></td>
        </tr>

        <tr>
            <td>Código da Transportadora:</td>
            <td><input type="text" name="codTransportadora" id="codTransportadora" class="form-control" required></td>
        </tr>

        <tr>
            <td>Pedido do ClienteId</td>
            <td><input type="text" name="pedidoClienteId" id="pedidoClienteId" class="form-control" required></td>
        </tr>

        <tr>
            <td> <button type="submit" class="btn btn-primary">Enviar</button></td>
        </tr>

    </table>
</form>